{
  "manifest_version": 2,
  "name": "Reload All Tabs in Window",
  "version": "0.1",
  "description": "Reload all tabs in current window.",
  "developer": {
    "name": "ericchase",
    "url": "https://github.com/ericchase/reload-all-tabs-in-window"
  },
  "icons": {
    "48": "icons/logo-48.png",
    "96": "icons/logo-96.png"
  },
  "permissions": [
    "activeTab",
    "menus",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/browser-action-16.png",
    "default_title": "Reload all tabs in this window."
  },
  "page_action": {
    "default_icon": "icons/page-action-19.png"
  },
  "background": {
    "scripts": [
      "js/browser-action.js"
    ]
  },
  "options_ui": {
    "browser_style": true,
    "page": "options/options.html"
  }
}
